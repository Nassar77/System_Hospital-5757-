@using SH.BLL.ModelVm
@model List<GetAllDoctorsVM>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (User.IsInRole("Admin"))
                        {
<div class="container mt-4">
    <h2 class="text-center mb-4">List of Doctors</h2>
    <table id="myTable" class="table table-hover table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Image</th>
                <th>Id</th>
                <th>Name</th>
                <th>Status</th>
                <th>Specialization</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="~/ProfileImage/DProfile/@item.Image" class="img-fluid rounded-circle" style="max-height: 100px; max-width: 100px;">
                    </td>
                    <td>@item.Id</td>
                    <td>@item.FullName</td>
                    <td>
                        @if (!@item.IsDelete)
                        {
                            <span>Available</span>
                        }
                        else
                        {
                            <span>Not Available</span>
                        }
                    </td>
                    <td>@item.Specialization</td>
                    <td>
                        
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-controller="Doctor" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                                <a asp-action="Delete" asp-controller="Doctor" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Away</a>

                               
                            </div>
                        
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>

<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
    });
</script>
}
@if (User.IsInRole("Patient"))
{
    <div class="container">
        <div class="row">
            @foreach (var doctor in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4">
                        <img class="card-img-top" src="~/ProfileImage/DProfile/@doctor.Image" alt="@doctor.FullName" />
                        <div class="card-body">
                            <h5 class="card-title">@doctor.FullName</h5>
                            <p class="card-text">@doctor.Specialization</p>
                            
                              <p>  @if (!doctor.IsDelete)
                                {
                                <p class="btn btn-sm btn-primary">Available</p>
                                }
                                else
                                {
                                <p btn btn-sm btn-danger>Not Available</p>
                                }
                            </p>
                            
                            @* <p class="card-text"><small class="text-muted">@doctor.Specialization</small></p> *@
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}


